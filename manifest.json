{
  "manifest_version": 3,
  "name": "小红书视频下载助手",
  "short_name": "XHS下载器",
  "version": "1.0.0",
  "description": "一键下载小红书视频和图片，支持批量保存，简单快捷的小红书内容下载工具",
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/xhs-downloader",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "*://*.xiaohongshu.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.xiaohongshu.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "小红书视频下载助手",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://*.xiaohongshu.com/*"]
    }
  ]
}